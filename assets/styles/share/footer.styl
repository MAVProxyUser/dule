.footer-nav
  height 220px
  padding-top 40px
  background-color #393939
  .slogan
    width 455px
    float left
    .title
      font-size 24px
      color #fff
    .slogan-text
      padding-top 13px
      font-size 18px
      color #d4d4d4
  .footer-nav-list
    float left
    font-size 12px
    .footer-thumb
      float left
      margin-right 40px
    .title
      color #fff
      padding-bottom 12px
    a
      padding-top 6px
      display block
      color #969696
      position relative
      &:hover
        color #fff
        img
          width 123px
      span
        vertical-align top
      img
        transition .3s all
        width 42px

footer
  height 40px
  background-color #2D2D2D
  color #A8A8A8
  font-size 12px
  line-height 40px
  .copyright
    display inline
  .creater
    float right
    color #989898
    span
      color #CDCDCD