body
  overflow hidden
:root
  --thumbnail-width: 20px
  --thumbnail-height: 3px
  --shadow: rgba(0, 0, 0, .25)

.hide-top
  transform: translateY(-100%)

#sections-wrapper
  position: relative
  overflow: hidden
  height: 550px
  background: #000
  section
    height: 550px
    font-size: 0
    text-align: center
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
  .section-1
    background-color #292929
  .segment
    height: 100%
    display: inline-block
    overflow: hidden
    position: relative
    box-sizing: border-box
  .segment-inner
    position: absolute
    top: 0
    background: no-repeat center center / cover
    height: 100%
    width: 100vw
  .hide-bottom
    transform: translateY(100%)
  .sections-control
    position absolute
    bottom 15px
    width 100%
    text-align: center
    font-size: 0
    .section-thumbnail
      display inline-block
      width 14px
      height 14px
      margin 0 12px
      border-radius 50%
      border solid 2px #C9C9C9
      position: relative
      transition: .3s all ease
      cursor: pointer
      transform-origin: right top
      &.active
        background-color #C9C9C9


// 首页模块标题公共样式
.module-title
  text-align center
  font-size 24px
  color #39393D
  span
    position relative
    display inline-block
    &:before
      position absolute
      left -53px
      top 50%
      content ''
      display inline-block
      width 40px
      height 2px
      background-color #D0021B
    &:after
      position absolute
      right:  -53px
      top 50%
      content ''
      display inline-block
      width 40px
      height 2px
      background-color #D0021B

#industry-chain
  padding-top 35px
  padding-bottom 45px
  article
    margin 25px auto 0
    width 1200px
    height 110px
    a
      float left
      width 230px
      height 110px
      background-size cover
      margin-right 12px
      span
        display block
        font-size 18px
        color #fff
        padding 12px 0 0 14px
      &:last-child
        margin-right 0

#product-center
  padding-top 35px
  padding-bottom 40px
  background-color #ECEEEF
  .thumb-falf,.thumb-three
    float left
    display block
    background-color #fff
    margin-top 30px
    color #303030
    text-align center
    &.thumb-falf
      margin-right 30px
      width 585px
      height 325px
      .img-cover
        height 190px
      p
        padding 17px 30px 0
        font-size 14px
        line-height 22px
    &.thumb-three
      margin-right 21px
      width 386px
      height 310px
      .img-cover
        height 180px
      p
        padding 17px 20px 0
        font-size 12px
        line-height 20px
    &:last-child
      margin-right 0
    .img-cover
      background-size cover
    .title
      padding 13px 30px 0
      font-size 18px
    
#logo-list
  padding-top 35px
  padding-bottom 45px
  img
    width 1200px

#map
  height 500px
  padding-top 72px
  background-size auto 100%
  background-position center
  .address
    margin-left 20px
    padding 26px 23px
    width 360px
    height 360px
    background-color #fff
    .title
      font-size 22px
      line-height 1
      padding-bottom 22px
      margin-bottom 4px
      border-bottom 1px solid #CACACA
    .plan
      font-size 16px
      color #6B6B6B
      padding-top 18px
    .aim
      padding-left 22px
      padding-top 24px
      position relative
      color #39393D
      font-size 14px
      &:before
        content ''
        position absolute
        left 0
        top 20px
        width 16px
        height 23px
        background-image url('../../images/home/address-icon.svg')
    .phone
      padding-top 30px
      color #39393D
      font-size 14px

#l-map
  height: 300px
  width: 100%

#r-result
  width: 100%

.footer-nav
  height 220px
  padding-top 40px
  background-color #393939
  .slogan
    width 455px
    float left
    .title
      font-size 24px
      color #fff
    .slogan-text
      padding-top 13px
      font-size 18px
      color #d4d4d4
  .footer-nav-list
    float left
    font-size 12px
    .footer-thumb
      float left
      margin-right 40px
    .title
      color #fff
      padding-bottom 12px
    a
      padding-top 6px
      display block
      color #969696
      position relative
      &:hover
        color #fff
        img
          width 123px
      span
        vertical-align top
      img
        transition .3s all
        width 42px
        
    



